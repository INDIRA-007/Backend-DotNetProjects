@page "/servers"

<br />
<br />

<div class="container-fluid text-center">
    <div class="row w-50">
        @foreach(var city in cities)
        {
            <div class="col">
                <div class="card">
                    <img src="@($"/images/{city}.png")" class="card-img-top" alt="...">
                    <div class="card-body">
                        <button type="button" class="btn btn-primary">@city</button>
                    </div>
                </div>

            </div>
        }
    </div>
</div>


@* @foreach(var city in cities)
